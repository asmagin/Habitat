<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
    <sitecore role:require="Standalone or ContentManagement">
        <unicorn>
            <configurations>
                <configuration name="Foundation.Multisite" description="Foundation Multisite" dependencies="Foundation.Serialization" extends="Helix.Foundation">
                    <targetDataStore physicalRootPath="$(serializationSource)Foundation\Multisite\serialization" type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" useDataCache="false" singleInstance="true" />
                    <predicate>
                        <include name="Branches" database="master" path="/sitecore/templates/branches/Foundation/Multisite" />
                    </predicate>
                    <rolePredicate>
                        <include domain="modules" pattern="^Foundation Multisite .*$" />
                    </rolePredicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>